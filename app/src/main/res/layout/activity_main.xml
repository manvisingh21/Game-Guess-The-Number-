<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the Number"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/minRangeEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/background"
        android:hint="Min"
        android:inputType="number"
        android:textColor="#333333" />

    <EditText
        android:id="@+id/maxRangeEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/minRangeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/background"
        android:hint="Max"
        android:inputType="number"
        android:textColor="#333333" />

    <Button
        android:id="@+id/newTargetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxRangeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Set Range"
        android:backgroundTint="@color/background"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/guessEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTargetButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/background"
        android:hint="Enter Your Guess"
        android:inputType="number"
        android:textColor="@color/background" />

    <Button
        android:id="@+id/guessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guessEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Guess"
        android:backgroundTint="@color/background"
        android:textColor="@color/black" />

</RelativeLayout>
